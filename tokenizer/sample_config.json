{
	"fieldConfig": {
	    "0": {
		    "prefix": "city:"
		},
		"1": {
			"prefix": "state:",
			"analyzer": {
				"filters": [
					"uppercase"
				],
				"tokenizers": [
					"whitespace"
				]
			}
		}
	},
	
	"defaultConfig": {
		"analyzer": {
			"replacements": [ {
					"regex":"[^\\w\\s]",
            		"replacement": "",
            		"description": "replace special chars"
				}, {
					"regex":"\"",
            		"replacement":"",
            		"description": "replace quotes"
				}, {
					"regex":"\\s+",
					"replacement": " ",
					"description": "replace multiple spaces by a single one"
				}
			],
			"filters":[
				"lowercase",
				"latin",
				"stop_default"
			],
			"tokenizers": [ 
				"character_n_6"
			]
		}
	},

	"settings": {
		"word_n_2": {
			"type": "word_ngram",
			"size": 2
		},
		"character_n_6": {
			"type" : "character_ngram",
			"size" : 6
		},
		"stop_default": {
			"type": "stop",
			"words": ["a", "an", "and", "are", "as", "at", "be", "but", "by",
				    "for", "if", "in", "into", "is", "it",
				    "no", "not", "of", "on", "or", "such",
				    "that", "the", "their", "then", "there", "these",
				    "they", "this", "to", "was", "will", "with", "-", ";", ",", "_", "+", "/", "\\"]
		}
	}
}